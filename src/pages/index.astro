---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
---

<style></style>

<Layout doc_title="Bienvenido">
  <div class="h-screen bg-red-500 flex items-center">
    <div class="mx-10 md:text-8xl text-6xl font-bold xl:w-4/5 text-white">
      <h1>TODO LO QUE</h1>
      <h1>TU NEGOCIO NECESITA</h1>
      <h1>LO TIENE <label class="text-red-900">JAOL</label></h1>
    </div>
    <h1
      id="text"
      class="hidden xl:block absolute xl:rotate-90 top-96 xl:right-0 : xl:text-8xl text-6xl font-bold text-white"
    >
    </h1>
  </div>

  <div>
    <div class="z-50 hidden md:sticky top-0 md:flex justify-around text-center">
      <a
        id="fun"
        href="#f"
        accesskey="funcionamiento"
        class="element_nav bg-red-500 w-1/3 text-white py-3 font-bold cursor-pointer pl-3"
      >
        Como funciona
      </a>
      <a
        id="his"
        href="#h"
        accesskey="historias"
        class="element_nav bg-red-500 w-1/3 text-white py-3 font-bold cursor-pointer pl-3"
      >
        Historias
      </a>
      <a
        id="pla"
        href="#p"
        accesskey="planes"
        class="element_nav bg-red-500 w-1/3 text-white py-3 font-bold cursor-pointer pl-3"
      >
        Planes
      </a>
    </div>

	<div id="navi-opener" class="bg-red-900 py-3 md:hidden flex justify-between text-white text-2xl cursor-pointer  text-bold z-50 sticky top-0">
		<h1 class="ml-5" id="navi">Funcionamiento</h1>
		<h1 class="font-bold mr-5">-</h1>
	</div>

	<div class=" w-full  text-white sticky z-50 top-14 hidden" id="items-p-navi">
		
		<div class="bg-red-600 py-3   flex flex-col " id="items">
			
		</div>
		
	</div>

    <Card
      title="Como funciona"
      ,
      subtitle="Ayudamos a maximizar tu dia"
      ,
      description=`Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestiae
          iste quas eveniet exercitationem nulla pariatur veritatis `
      ,
      id="f",
	  img="../../public/p1.svg"
    />

	<Card
      title="Casos de clientes"
      ,
      subtitle="Descubre cómo los clientes consiguen más con JAOL"
      ,
      description=`Lorem ipsum dolor sit amet, consectetur adipisicing elit. Molestiae
          iste quas eveniet exercitationem nulla pariatur veritatis `
      ,
      id="h",
	  img="../../public/c1.svg"
    > 

    <div  class="flex my-10 items-center h-64 md:h-40">
      <button class="mx-4 text-white font-bold text-3xl bg-red-700 rounded-xl text-center  p-3" id="low">{"<"}</button>
      <div class="bg-red-500 rounded-lg p-5 border shadow-xl" id="slider-parent">
       
      </div>
      <button class="mx-4 text-white font-bold text-3xl bg-red-700 rounded-xl text-center  p-3" id="up">{">"}</button>
    </div>

  </Card>
	
	<Card
      title="Planes"
      ,
      subtitle="Disfruta de nuestros planes"
      ,
      id="p",
      img="../../public/a1.svg"
    
    > 
    
    <div>
      <div class="bg-red-500 shadow-lg border text-3xl px-2 rounded-xl text-white  my-2 cursor-pointer" id="s-c">
        <h1>Plan sencillo</h1>
      </div>
      <div id="s">
        
      </div>
      <div class="bg-red-500 shadow-lg border text-3xl px-2 rounded-xl text-white  my-2 cursor-pointer" id="p-c">
        <h1>Plan Premium</h1>
      </div>
      <div id="p-p">

      </div>
    </div>
    
  </Card>
  </div>
</Layout>
